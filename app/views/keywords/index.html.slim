- model_class = Keyword
div class="page-header"
  h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
table class="table table-striped"
  thead
    tr
      th= model_class.human_attribute_name(:id)
      th= model_class.human_attribute_name(:name)
      th= model_class.human_attribute_name(:created_at)
      th=t '.actions', :default => t("helpers.actions")
  tbody
    - @keywords.each do |keyword|
      tr
        td= link_to keyword.id, keyword_path(keyword)
        td= keyword.name
        td=l keyword.created_at
        td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_keyword_path(keyword), :class => 'btn btn-mini'
          '
          = link_to t('.destroy', :default => t("helpers.links.destroy")), keyword_path(keyword), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_keyword_path, :class => 'btn btn-primary'

